<!DOCTYPE hibernate-configuration [
    <!ELEMENT hibernate-configuration (session-factory)>
    <!ELEMENT session-factory (property*, mapping*)>
    <!ELEMENT property (#PCDATA)>
    <!ELEMENT mapping EMPTY>
    <!ATTLIST property name CDATA #REQUIRED>
    <!ATTLIST mapping class CDATA #REQUIRED>
]>
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/EmployeeCourseDB</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">alex1234</property>

        <!-- JDBC connection pool settings -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Specify dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mention annotated class -->
        <mapping class="alexgoder.jt.Employee" />
        <mapping class="alexgoder.jt.Course" />
    </session-factory>
</hibernate-configuration>